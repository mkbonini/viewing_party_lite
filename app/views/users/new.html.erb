<h2>Register a New User</h2>

<% flash.each do |type, msg| %>
    <div class='flash_red'><%= msg %></div>
    <br>
<% end %>

<%= form_with url: "/users", method: :post, local: true do |f| %>
    <%= f.label :name, "Name: " %>
    <%= f.text_field :name %>

    <%= f.label :email, "email: " %>
    <%= f.text_field :email %>

    <%= f.submit 'Create New User' %>
<% end %>